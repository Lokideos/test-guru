<section class="chosen-badge">
  <div class="row justify-content-center">
    <div class="col col-md-3 mt-3">
      <h2><%= @badge.name %></h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col col-md-4 mt-3">
      <p><%= t('.name', name: @badge.name) %></p>
      <p><%= t('.icon_path') %>: <%= @badge.icon_path %></p>
      <p><%= t('.badge_acquisition_rule') %>: <%= @badge.badge_acquisition_rule.name %></p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2 col-md-2 mt-3">
      <div class="btn-default-container">
        <%= button_to t('common.edit'), edit_admin_badge_path(@badge), method: :get, class: 'btn-default btn' %>
      </div>
    </div>
  
    <div class="col-2 col-md-2 mt-3">
      <div class="btn-default-container">
        <%= button_to t('admin.questions.question.destroy'),
                      admin_badge_path(@badge),
                      method: :delete,
                      data: { confirm: t('data.messages.delete_confirmation') },
                      class: 'btn-default btn' %>    
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2 col-md-2 mt-3">
      <div class="btn-default-container">
        <%= button_to t('common.back'), admin_badges_path, method: :get, class: 'btn-default btn' %>
      </div>
    </div>
  </div>

</section>