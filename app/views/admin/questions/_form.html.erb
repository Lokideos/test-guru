<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @test, @question], local: true do |form| %>
      <div class="form-group">
          <%= render 'shared/errors', resource: @question %>

          <p>
            <%= form.label :body %>
            <%= form.text_field :body, id: :question_body, class: "form-control" %>
          </p>

          <div class="container btn-default-container">
            <div class="mt-2">
              <p><%= form.submit class: 'btn-default btn' %></p>
            </div>
          </div>      
      </div>
    <% end %>
  </div>
</div>