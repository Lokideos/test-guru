<%= form_with model: [:admin, test], 
              url: update_inline_admin_test_path(test), 
              local: true, 
              class: 'form-inline hide',

              # jQuery realization
              # class: 'form-inline',
              # html: { style: 'display: none' },
              
              data: { test_id: test.id } do |form| %>
  <div class="col-6">
    <%= form.text_field :title, class: 'form-control mr-2 col-12' %>
  </div>  
  <div class="col-6">
    <%= form.submit t('common.submit'), class: 'btn-default btn' %>
  </div>
<% end %>