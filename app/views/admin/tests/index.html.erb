<section class="all-tests">
  <div class="row justify-content-center mt-3">
    <div class="col col-md-4">
      <h1><%= t('.header') %></h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col col-md-4">
      <div class="btn-default-container">
        <%= button_to t('.show_gists'), admin_gists_path, class: 'btn-default btn', method: :get %>
        <%= button_to t('.new_test'), new_admin_test_path, class: 'btn-default btn', method: :get %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col col-md-10">
      <div class="tests-table">
        <header>
          <ul>
            <li class="sort-by-title pointer"><%= t('.title') %>
              <%= octicon 'arrow-up', class: 'text-success hide' %>
              <%= octicon 'arrow-down', class: 'text-success hide' %>
            </li>
            <li><%= t('.level') %></li>
            <li><%= t('.questions_quantity') %></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </header>
        <div class="tests-table-content">
          <%= render @tests %>        
        </div>
      </div>
    </div>
  </div>
</section>