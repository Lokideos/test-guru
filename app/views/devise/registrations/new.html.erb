<section class="user-form">
  <div class="row justify-content-center">
    <div class="col col-md-4">
      <h2 class="user-header"><%= t('.signup')%></h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col col-md-4">
      <div class="card">
        <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <p>
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('.email_placeholder') %>
                </p>

                <p>
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= t('.min_characters_requirment', length: @minimum_password_length) %>)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </p>

                <p>
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                </p>
              </div>

              <div class="container btn-user-container">
                <div class="mt-2">              
                  <%= f.submit class: "btn-user btn" %>
                </div>
              </div>

            <% end %>
          </div>
        </div>

        <div class="mt-1">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</section>
