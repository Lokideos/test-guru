<div class="card">
  <div class="card-body">
    <%= form_with model: @feedback, local: true do |form| %>
      <div class="form-group">
        <%= render 'shared/errors', resource: @feedback %>

        <p>
          <%= form.label :text %>
          <%= form.text_area :text, id: :feedback_text, rows: 5, class: "form-control" %>
        </p>
      </div>

      <div class="container btn-default-container">
        <div class="mt-2">
          <%= form.submit class: "btn-default btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
