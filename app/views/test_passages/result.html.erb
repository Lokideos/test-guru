<section class="test-passage-result">
  <div class="test-passage-grid">
    <% if @test_passage.test_passed? %>
      <div class="icon-result icon-passed">
        <img src="/test-guru-happy-face.png">
      </div>
      <div class="test-passed">
        <%= t('.test_completed', title: @test_passage.test.title) %>
      </div>
    <% else %>
      <div class="icon-result icon-failed">
        <img src="/test-guru-sad-face.png">
      </div>
      <div class="test-failed">
        <%= t('.test_failed', title: @test_passage.test.title) %>
      </div>
    <% end %>
  </div>

  <div class="back-link-grid">
    <div class="btn-test-passage">
      <%= button_to t('common.again'), start_test_path(@test_passage.test), class: 'btn' %>
    </div>
    <div class="btn-test-passage">
      <%= button_to t('common.back'), tests_path, method: :get, class: 'btn' %>
    </div>
  </div>

  <div class="badge-acquiring">
    <% if @badges %>
      <ul>
        <% @badges.each do |badge| %>
        <div class="row justify-content-center">
          <%= render badge %>
        </div>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>